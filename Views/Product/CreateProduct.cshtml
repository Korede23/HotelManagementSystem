@model HotelManagementSystem.Dto.RequestModel.CreateProduct
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Product";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create Product</h6>
                <form asp-controller="Product" asp-action="CreateProduct">

                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Name </label>
                            <input type="text" class="form-control" name="Name">
                        </div>
                        <div class="col mb-12">
                            <label class="form-label">Price </label>
                            <input type="text" class="form-control" name="Price">
                        </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a href="@Url.Action("Products", "Product")" class="btn btn-dark ms-2">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


