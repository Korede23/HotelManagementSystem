@model HotelManagementSystem.Dto.ProductDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Edit Product</h6>
                <form asp-controller="Product" asp-action="EditProduct">

                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Name </label>
                            <input type="text" class="form-control" name="product" value="@Model.Name" >
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Price </label>
                            <input type="text" class="form-control" name="Price" value="@Model.Price">
                        </div>
                    </div>
                    <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Create </button>
                    <a href="@Url.Action("Products","product")" class="btn btn-dark ms-2">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



