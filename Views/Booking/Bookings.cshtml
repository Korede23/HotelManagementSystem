@model IEnumerable<HotelManagementSystem.Dto.BookingDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Bookings";
}
<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <a href="@Url.Action("CreateBooking","Booking")" class="mb-0">Create Booking</a>
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-white">
                            <th scope="col"><input class="form-check-input" type="checkbox"></th>
                            <th scope="col">Rooms</th>
                            <th scope="col">Email</th>
                            <th scope="col">PhoneNumber</th>
                            <th scope="col">TotalCost</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input class="form-check-input" type="checkbox"></td>
                                <th scope="col">Rooms</th>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.TotalCost</td>
                                <td>
                                    <a asp-action="EditBooking" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="DeleteBooking" asp-route-id="@item.Id">Delete</a> |
                                    <a asp-action="GetBookingById" asp-route-id="@item.Id">ViewDetails</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h3>No bookings available</h3>
        }
    </div>
</div>
<!-- Recent Sales End -->
