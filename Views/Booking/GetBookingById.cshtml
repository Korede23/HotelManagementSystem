@model HotelManagementSystem.Dto.OrderDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Order Details";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <h3>Order Details</h3>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <tbody>
                    <tr>
                        <th scope="row">Product</th>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <th scope="row">Order Date</th>
                        <td>@Model.OrderDate.ToString("MM/dd/yyyy")</td>
                    </tr>
                    <tr>
                        <th scope="row">Total Amount</th>
                        <td>@Model.TotalAmount</td>
                    </tr>
                </tbody>
            </table>
            <a asp-action="EditOrder" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Orders" class="btn btn-secondary">Back to Orders</a>
        </div>
    </div>
</div>
