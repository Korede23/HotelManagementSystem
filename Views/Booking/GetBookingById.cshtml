@model HotelManagementSystem.Dto.BookingDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Booking Details";
}

<div class="container-fluid pt-4 px-4">
<div class="bg-secondary text-center rounded p-4">
    <h2>Booking Details</h2>
    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-3">Room</dt>
            <dd class="col-sm-9">@Model.Rooms</dd>

            <dt class="col-sm-3">Total Cost</dt>
            <dd class="col-sm-9">@Model.TotalCost</dd> 
            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    }
    else
    {
        <p>Booking details are not available.</p>
    }
    <a href="@Url.Action("Bookings", "Booking")" class="btn btn-primary">Back to List</a>
</div>
</div>