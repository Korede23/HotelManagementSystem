@model HotelManagementSystem.Dto.RequestModel.CreateBooking

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create ";
}

<h2>Create Booking</h2>

<form asp-controller="Booking" asp-action="CreateBooking">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<HotelManagementSystem.Model.Entity.Enum.RoomStatus>()">
            <option value="">Select Room Type</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalCost"></label>
        <input asp-for="TotalCost" class="form-control" />
        <span asp-validation-for="TotalCost" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" value="Create" class="btn btn-primary"> Create  </button>
    </div>
</form>
