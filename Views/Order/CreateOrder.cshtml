@model HotelManagementSystem.Dto.OrderDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Order";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create Order</h6>
                <form asp-controller="Order" asp-action="CreateOrder">
                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Product </label>
                            <input type="text" class="form-control" name="Product">
                        </div>
                        <div class="col mb-12">
                            <label class="form-label">OrderDate </label>
                            <input type="text" class="form-control" name="OrderDate">
                        </div>
                        <div class="col mb-12">
                            <label class="form-label">TotalAmount </label>
                            <input type="text" class="form-control" name="TotalAmount">
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a href="@Url.Action("Orders", "Order")" class="btn btn-dark ms-2">Show All</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

