@model HotelManagementSystem.Dto.RequestModel.CreateCustomer

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Customer";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Create Customer</h6>
                <form asp-controller="Customer" asp-action="CreateCustomer">

                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" name="Name" aria-describedby="-name">
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" name="Address">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">Age</label>
                            <input type="text" class="form-control" name="Age">
                        </div>
                        <div class="col mb-3">
                            <label asp-for="Gender"></label>
                           <select asp-for="Gender" class="form-control">
                                <option selected>Select Gender</option>
                                <option value="0">Male</option>
                                <option value="1">Female</option>
                                <option value="2">Other</option>
                             </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="Email">
                        </div>
                        <div class="col mb-3">
                            <label class="form-label">PassWord</label>
                            <input type="text" class="form-control" name="PassWord">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">PhoneNumber</label>
                            <input type="text" class="form-control" name="PhoneNumber">
                            <div class="row">
                                <div class="col mb-6">
                                    <label class="form-label">UserName</label>
                                    <input type="text" class="form-control" name="UserName">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a href="@Url.Action("Customers","Customer")" class="btn btn-dark">Show All</a>
                </form>
            </div>
        </div>
    </div>
</div>

