@model HotelManagementSystem.Dto.RequestModel.CreateCustomer

@{
    Layout = "_RegisterLayout";
    ViewData["Title"] = "Create Customer";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Register</h6>
                <form asp-controller="User" asp-action="CreateUser">

                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" name="Name" aria-describedby="-name">
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" name="Address">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">AgeRange</label>
                            <input asp-for="AgeRange" class="form-control" type="text" />
                        </div>
                        <div class="col mb-3">
                            <div class="col mb-3">
                                <label asp-for="Gender"></label>
                                <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<HotelManagementSystem.Model.Entity.Enum.Gender>()">
                                    <option value="">Select Gender</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mb-3">
                                <label class="form-label">Email</label>
                                <input type="text" class="form-control" name="Email">
                            </div>
                            <div class="col mb-3">
                                <label class="form-label">PassWord</label>
                                <input type="password" class="form-control" name="PassWord">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mb-3">
                                <label class="form-label">PhoneNumber</label>
                                <input type="text" class="form-control" name="PhoneNumber">
                                <div class="row">
                                    <div class="col mb-6">
                                        <label class="form-label">UserName</label>
                                        <input type="text" class="form-control" name="UserName">
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                    <a href="@Url.Action("Customers","Customer")" class="btn btn-dark" ms-2>Show All</a>
                                </div>
                </form>
            </div>
        </div>
    </div>
</div>

