@model HotelManagementSystem.Dto.RequestModel.CreateReview

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Review";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4"> Review</h6>
                <form asp-controller="CustomerReview" asp-action="CreateReview">

                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Comment</label>
                            <input type="text" class="form-control" name="comment" aria-describedby="comment">
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Rating </label>
                            <input type="text" class="form-control" name="rating">
                        </div>
                    </div>
                    <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Add Comment</button>
                    <a href="@Url.Action("Rooms","Room")" class="btn btn-dark ms-2">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
