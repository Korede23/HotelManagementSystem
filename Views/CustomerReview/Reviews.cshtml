@model IEnumerable<HotelManagementSystem.Dto.CustomerReviewDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "CustomerReview";
}

<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <a href="@Url.Action("CreateReview","CustomerReview")" class="mb-0">Create Review</a>
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-white">
                            <th scope="col"><input class="form-check-input" type="checkbox"></th>
                            <th scope="col">Comment</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input class="form-check-input" type="checkbox"></td>
                                <td>@item.Comment</td>
                                <td>@item.Rating</td>
                                <td>
                                 @*    <a asp-action="EditRo" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="DeleteRoom" asp-route-id="@item.Id">Delete</a> *@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h3>No reviews available</h3>
        }
    </div>
</div>
<!-- Recent Sales End -->


