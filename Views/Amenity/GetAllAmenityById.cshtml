@model HotelManagementSystem.Dto.AmenityDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Amenity Details";
}


<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <h2>amenity Details</h2>
        @if (Model != null)
        {
            <dl class="row">
                <dt class="col-sm-3">Amenity Name</dt>
                <dd class="col-sm-9">@Model.AmenityName</dd>

                <dt class="col-sm-3">Amenity Type</dt>
                <dd class="col-sm-9">@Model.AmenityType</dd>

               
            </dl>
        }
        else
        {
            <p>Amenity details are not available.</p>
        }
        <a href="@Url.Action("Amenities", "Amenity")" class="btn btn-primary">Back to List</a>
    </div>
</div>