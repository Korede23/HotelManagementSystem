@model HotelManagementSystem.Dto.UserDto
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit User";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12 col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Edit User</h6>
                <form asp-controller="User" asp-action="EditUser">

                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" name="Name" aria-describedby="name" value="@Model.Name">
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" name="Address" value="@Model.Address">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="Email" value="@Model.Email">
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">UserName</label>
                            <input type="text" class="form-control" name="UserName" value="@Model.UserName">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber">
                        </div>
                        <div class="col mb-3">
                            <label class="form-label">AgeRange</label>
                            <input asp-for="AgeRange" class="form-control" value="@Model.AgeRange" type="text" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <label asp-for="Gender"></label>
                            <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<HotelManagementSystem.Model.Entity.Enum.Gender>()">
                                <option value="">Select Gender</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="@Url.Action("Users","User")" class="btn btn-dark">Show All</a>
                </form>
            </div>
        </div>
    </div>
</div>




